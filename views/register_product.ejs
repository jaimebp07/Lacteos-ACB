    <div class="container" id="titleInitSes">
      <div class="container" id="header3">
        <label> Registre los siguientes datos para la creacion del producto</label>
      </div>
        <form action="/add_product" method="POST" style="margin-top: 25px">
          <div class="form-group row">
            <label for="id_product" class="col-sm-2 col-form-label">Id producto</label>
            <div class="col-sm-10">
              <input id="id_product" type="number" name="id_product" class="form-control">
            </div>
          </div>
      
          <div class="form-group row">
            <label for="name_product" class="col-sm-2 col-form-label">Nombre del producto</label>
            <div class="col-sm-10">
              <input id="name_product" type="text" name="name_product" class="form-control">
            </div>
          </div>
          <div class="form-group row" id="despleg">
            <label for="unit_of_measurement" class="col-sm-2 col-form-label">Unidad de medida</label>
            <div class="col-sm-10">
              <select id="disabledSelect" name="unit_of_measurement" class="form-select">
                <option>Kilogramos</option>
                <option>Libras</option>
                <option>Litros</option>
                <option>Mililitros</option>
              </select>
            </div>

          <div class="form-group row">
            <label for="amount_product" class="col-sm-2 col-form-label">Cantidad</label>
            <div class="col-sm-10">
              <input id="amount_product" type="number" name="amount_product" class="form-control" min="0"
              required>
            </div>
          </div>
      
          <div class="form-group row">
            <label for="price_product" class="col-sm-2 col-form-label">Precio</label>
            <div class="col-sm-10">
              <input id="price_product" type="number" name="price_product" class="form-control" min="0"
              required>
            </div>
          </div>
          <div class="container">
            <button type="submit" class="btn btn-light"id="ButtonNorm">Registrar</button>
          </div>
        </form>
      </div>
