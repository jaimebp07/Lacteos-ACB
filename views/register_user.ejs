    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item ">
          <a class="nav-link" id="usersRegistr" href="#">
            Agregar usuarios</a>
        </li>
        <li class="nav-item ">
          <a class="nav-link" id="btnAdd" href="/users">
            Usuarios registrados</a>
        </li>
      </ul>
